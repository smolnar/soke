<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f|  %>
  <%= form_messages_for resource %>

  <h2 class="form-signin-heading">Sign up</h2>

  <%= f.label :email, for: 'email', class: 'sr-only' %>
  <%= f.email_field :email, id: 'email', class: 'form-control', placeholder: 'Email address', autofocus: true, required: true %>

  <%= f.label :password, for: 'password', class: 'sr-only' %>
  <%= f.password_field :password, id: 'password', class: 'form-control', placeholder: 'Password', required: true %>

  <%= f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
