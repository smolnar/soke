<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'devise-form' }) do |f| %>
  <%= flash_messages %>
  <%= form_messages_for resource %>

  <h3 class="heading">Reset password</h3>

  <%= f.label :email, for: 'email', class: 'sr-only' %>
  <%= f.text_field :email, id: 'email', class: 'form-control last', placeholder: 'Email address', autofocus: true %>

  <%= f.submit "Send instructions", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
